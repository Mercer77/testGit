<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.app.MainActivity"
    android:padding="10dp"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        />
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tl1"
        android:layout_gravity="center_horizontal">
       <TableRow>
        <Button
            android:id="@+id/bt1"
            android:text="1"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/bt2"
            android:text="2"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/bt3"
            android:text="3"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btadd"
            android:text="+"
            android:textSize="25sp"
            />
       </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt4"
                android:text="4"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/bt5"
                android:text="5"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/bt6"
                android:text="6"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/btcan"
                android:text="-"
                android:textSize="25sp"
                />

        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt7"
                android:text="7"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/bt8"
                android:text="8"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/bt9"
                android:text="9"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/btmul"
                android:text="*"
                android:textSize="25sp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:id="@+id/bt0"
                android:text="0"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/btc"
                android:text="C"
                android:textSize="25sp"/>
            <Button
                android:id="@+id/bteql"
                android:text="="
                android:textSize="25sp"/>
            <Button
                android:id="@+id/btmol"
                android:text="/"
                android:textSize="25sp"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>
